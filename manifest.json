{
  "manifest_version": 3,
  "name": "Smart Tab Bookmarker",
  "version": "1.3",
  "description": "Bookmark all open tabs in a date-time named folder",
  "permissions": [
    "tabs",
    "bookmarks"
  ],
  "action": {
    "default_title": "Smart Tab Bookmarker",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "smart-tab-bookmarker@example.com"
    }
  }
}
